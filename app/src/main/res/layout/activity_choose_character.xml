<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseCharacterActivity"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="94.76dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안녕하세요 "
                android:fontFamily="@font/nanum"
                android:textColor="#000000"
                android:textSize="23sp"/>

            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:fontFamily="@font/nanum"
                android:textColor="#000000"
                android:textSize="23sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="님,"
                android:fontFamily="@font/nanum"
                android:textColor="#000000"
                android:textSize="23sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="캐릭터를 선택해주세요"
            android:fontFamily="@font/nanum"
            android:textColor="#000000"
            android:textSize="23sp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="249.93dp"
        android:layout_height="35.29dp"
        android:layout_marginTop="38.25dp"
        android:layout_gravity="center"
        android:src="@drawable/character_logo"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22.71dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/ch_1"
            android:layout_width="114.25dp"
            android:layout_height="114.25dp"
            android:src="@drawable/character1"/>

        <ImageView
            android:id="@+id/ch_2"
            android:layout_width="114.25dp"
            android:layout_height="114.25dp"
            android:layout_marginLeft="20.85dp"
            android:src="@drawable/character2"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.16dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ch_3"
            android:layout_width="114.25dp"
            android:layout_height="114.25dp"
            android:src="@drawable/character3"/>

        <ImageView
            android:id="@+id/ch_4"
            android:layout_width="114.25dp"
            android:layout_height="114.25dp"
            android:layout_marginLeft="20.85dp"
            android:src="@drawable/character4"/>

    </LinearLayout>
    
    <ImageView
        android:id="@+id/startBtn"
        android:visibility="invisible"
        android:layout_width="312.22dp"
        android:layout_height="46.83dp"
        android:layout_marginTop="164.62dp"
        android:layout_gravity="center"
        android:src="@drawable/character_start_btn"/>

</LinearLayout>